{
  "name": "w3ui",
  "private": true,
  "version": "0.0.0",
  "description": "Headless, type-safe, UI components for the next generation Web3.Storage APIs.",
  "author": "Alan Shaw",
  "license": "Apache-2.0 OR MIT",
  "scripts": {
    "build": "rollup --config rollup.config.js && npm run typecheck",
    "clean": "npm exec --workspaces -c \"rm -rf build || true\"",
    "compile": "npm run --workspaces --if-present compile",
    "lint": "ts-standard",
    "test": "jest --config jest.config.js",
    "typecheck": "tsc -b"
  },
  "workspaces": [
    "examples/react/file-upload",
    "examples/react/multi-file-upload",
    "examples/react/sign-up-in",
    "examples/react/template",
    "packages/react-native-wallet",
    "packages/react-uploader",
    "packages/react-wallet",
    "packages/uploader-core",
    "packages/wallet-core"
  ],
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.18.6",
    "@babel/preset-env": "^7.19.0",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^14.0.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/jest": "^29.0.2",
    "@types/react": "^18.0.18",
    "jest": "^27.5.1",
    "react": "^18.1.0",
    "rollup": "^2.79.0",
    "rollup-plugin-size": "^0.2.2",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.8.1",
    "ts-node": "^10.9.1",
    "ts-standard": "^11.0.0",
    "typescript": "^4.8.2"
  }
}
